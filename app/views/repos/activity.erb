<%= partial :repo_header, locals: {repo: @repo} %>

<div class="settings row">
  <nav class="col-md-2 sidebar">
    <%= partial :repo_menu, locals: {repo: @repo} %>
  </nav>
  <div class="col-md-10">
    <h2>Recent Activity</h2>
    <table class="table tasks table-hover">
      <thead>
        <tr>
          <td>Task</td>
          <td>Project</td>
          <td>Type</td>
          <td>Trigger</td>
          <td>By</td>
          <td>Time</td>
          <td>Status</td>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <%= partial :task, locals: {task: task, name: true} %>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @tasks %>
  </div>
</div>
